
<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="container-fluid">
  <div class="w-50 container p-2  bg-secondary rounded-3">
    <h1 class="text-light text-center">Sign up </h1>
    <div class="field">
      <%= f.label :email, class: "text-light" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-100 p-2 rounded-2" %>
    </div>

    <div class="field">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password", class: "w-100 p-2 rounded-2" %>
    </div>

    <div class="field">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-100 p-2 rounded-2" %>
    </div>

    <div class="actions">
      <%= f.submit "Sign up", class: "btn btn-light mt-3" %>
    </div>
    <%= render "devise/shared/links" %>
  </div>
<% end %>


